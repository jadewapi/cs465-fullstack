<div id="contents">
    <div class="box">
        <div>
            <div class="body">
                <h1>Travel</h1>
                <ul id="sites">
                    {{#each trips}}
                        <li>
                            <a href="/api/trips/{{this.code}}">
                                <img src="/images/{{this.image}}" alt="Image for {{this.name}}">
                            </a>
                            <h2><a href="/api/trips/{{this.code}}">{{this.name}}</a></h2>
                            <p>{{{this.description}}}</p>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
